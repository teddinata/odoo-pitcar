    <record id="action_pitcar_stall_dashboard" model="ir.actions.act_window">
        <field name="name">Stall Dashboard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pitcar.service.booking</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_pitcar_service_booking_kanban_stall"/>
        <field name="domain">[('booking_date','=',context_today())]</field>
        <field name="context">{
            'search_default_group_stall_id': 1,
            'default_group_by': 'stall_id',
            'group_by': 'stall_id'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada booking di stall
            </p>
            <p>
                Drag and drop booking ke stall yang tersedia
            </p>
        </field>
    </record>

    <record id="action_pitcar_stall_list" model="ir.actions.act_window">
        <field name="name">Service Stalls</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pitcar.service.stall</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service stall
            </p>
        </field>
    </record>

    
